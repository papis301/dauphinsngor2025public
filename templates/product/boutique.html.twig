{% extends 'base.html.twig' %}

{% block title %}Hello ActualitesController!{% endblock %}

{% block body %}
<!-- ==========hero-area========== -->
    <section class="hero-section">
        <div class="hero-area bg_img" data-background="assets/images/about/hero-bg.jpg">
            <div class="container">
                <h1 class="title">Boutique</h1>
            </div>
        </div>
        {# <div class="container">
            <ul class="breadcrumb">
                <li>
                    <a href="index.html">home</a>
                </li>
                <li>
                    shop
                </li>
            </ul>
        </div> #}
    </section>
    <!-- ==========hero-area========== -->

    <!-- ==========shop-section========== -->
    <section class="shop-section padding-bottom padding-top">
        <div class="container">
            <div class="row justify-content-center mb-30-none">
            {% for product in products %}
                <div class="col-sm-10 col-lg-4 col-md-6">
                    
                    <div class="shop-item">
                        <div class="shop-thumb">
                        {% for image in product.images |slice(0,1) %}
                            <img src="{{ asset('uploads/' ~ image.filename) }}" alt="Image du produit" width="181" height="141">
                        {% endfor %}
                            {# <img src="assets/images/shop/shop01.png" alt="shop"> #}
                            <div class="shop-icons">
                                <ul>
                                    <li>
                                        <a href="#0"><i class="fas fa-heart"></i></a>
                                    </li>
                                    <li>
                                        <a href="#0"><i class="fas fa-shopping-cart"></i></a>
                                    </li>
                                    <li>
                                        <a href="#0"><i class="fas fa-link"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="shop-content">
                            <h4 class="title"><a href="#0">Swimming Shoes</a></h4>
                            <span>$80.00 </span><del>$120.00</del>
                        </div>
                    </div>
                              
                </div>
                  {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                
            </div>
        </div>
    </section>
    <!-- ==========shop-section========== -->
{% endblock %}